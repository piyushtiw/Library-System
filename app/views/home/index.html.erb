<h1>Hello, <%= current_user.first_name =%></h1>
<% if current_user.admin? || current_user.verified_librarian? || current_user.student? %>
<div class="row">
  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Hold Requests</span>
        <p></p>
      </div>
      <div class="card-action">
        <a href="<%= hold_requests_url %>">View</a>
      </div>
    </div>
  </div>
  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">My Profile</span>
        <p></p>
      </div>
      <div class="card-action">
        <a href="users/edit">View</a>
      </div>
    </div>
  </div>
</div>
<% else %>
  <div class="card blue-grey darken-1">
      <div class="card-action">
        Sorry, you are not verified yet.
      </div>
  </div>
<% end %>
<br>
