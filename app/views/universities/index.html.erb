<h1>Universities</h1>

<table>
  <thead>
    <tr>
      <th>S.No</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @universities.each_with_index do |university, index| %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= university.name %></td>
        <td><%= link_to raw("<i class='material-icons'>visibility</i>"), university %></td>
        <% if policy(:dashboard).can_update_library? %>
          <td><%= link_to raw("<i class='material-icons'>create</i>"), edit_university_path(university) %></td>
          <td><%= link_to raw("<i class='material-icons'>delete_forever</i>"), university, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if policy(:dashboard).can_update_library? %>
  <a href='<%= new_university_path %>' class='waves-effect waves-light btn'>New University</a>
<% end %>
