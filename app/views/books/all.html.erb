<table>
  <thead>
  <tr>
    <th>S.No</th>
    <th>Name</th>
    <th>ISBN</th>
    <th>Authors</th>
    <th>Subject</th>
    <th>Special Collection</th>
    <th>Library</th>
    <th colspan="2"></th>
  </tr>
  </thead>
  <tbody>
  <% @books_all.each_with_index do |book, index| %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= book.title %></td>
      <td><%= book.isbn %></td>
      <td><%= book.authors %></td>
      <td><%= book.subject %></td>
      <td><%= book.special_collection ? "Yes": "No" %></td>
      <td><%= book.library.name %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>